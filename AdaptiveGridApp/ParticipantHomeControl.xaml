                </Grid>
                <Grid
                    x:Name="EndCall"
                    Grid.Column="2"
                    Margin="0,-5,0,0"
                    Tapped="EndCall_Tapped">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <Image
