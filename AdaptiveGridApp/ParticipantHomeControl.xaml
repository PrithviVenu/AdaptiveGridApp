                        Height="14"
                        HorizontalAlignment="Center"
                        Source="ms-appx:///Photos/Icons/Chat.png"
                        Stretch="Fill" />
                    <TextBlock
                        Name="ChatTextBlock"
                        Grid.Row="1"
                        HorizontalAlignment="Center"
                        Text="Chat"
                        TextTrimming="CharacterEllipsis" />
                </Grid>
                <Grid
                    x:Name="ParticipantGrid"
                    Grid.Column="1"
                    Margin="0,-2,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
