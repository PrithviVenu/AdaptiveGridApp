        <GridView
            x:Name="AdaptiveGridViewControl"
            Grid.Row="2"
            Margin="15,0,15,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            x:Load="True"
            IsItemClickEnabled="False"
            ItemTemplate="{StaticResource ImageTemplate}"
            ItemsSource="{x:Bind PhotoItems, Mode=OneWay}"
            SelectionMode="Single">
            <GridView.ItemContainerStyle>
                <Style TargetType="GridViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                    <Setter Property="VerticalContentAlignment" Value="Stretch" />
                </Style>
            </GridView.ItemContainerStyle>
            <GridView.ItemsPanel>
                <ItemsPanelTemplate>
                    <local:CustomPanel x:Name="panel" Loaded="CustomPanel_Loaded" />
                </ItemsPanelTemplate>
            </GridView.ItemsPanel>
        </GridView>
        <local:PoppedoutControl
            x:Name="PoppedoutControl"
            Grid.Row="2"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            HorizontalContentAlignment="Stretch"
            VerticalContentAlignment="Stretch"
            x:Load="False"
            PhotoItems="{x:Bind PhotoItems, Mode=OneWay}" />
        <local:ScreenshareControl
            x:Name="ScreenshareControl"
            Grid.Row="2"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            HorizontalContentAlignment="Stretch"
            VerticalContentAlignment="Stretch"
            x:Load="False"
            PhotoItems="{x:Bind PhotoItems, Mode=OneWay}" />
        <local:OverlayControl
            x:Name="OverlayControl"
            Grid.Row="2"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            HorizontalContentAlignment="Stretch"
            VerticalContentAlignment="Stretch"
            x:Load="False"
            PhotoItems="{x:Bind PhotoItems, Mode=OneWay}" />
        <local:AudioConferenceControl
            x:Name="AudioConferenceControl"
            Grid.Row="2"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            HorizontalContentAlignment="Stretch"
            VerticalContentAlignment="Stretch"
            x:Load="False"
            PhotoItems="{x:Bind PhotoItems, Mode=OneWay}" />
        <local:ActiveSpeakerControl
            x:Name="ActiveSpeakerControl"
            Grid.Row="2"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            HorizontalContentAlignment="Stretch"
            VerticalContentAlignment="Stretch"
            x:Load="False"
            PhotoItems="{x:Bind PhotoItems, Mode=OneWay}" />
        <Grid
            x:Name="BottomPane"
            Grid.Row="3"
            Height="64"
            Margin="0,15,0,0"
            BorderBrush="#F4F4F4"
            BorderThickness="0,0.5,0,0"
            Canvas.ZIndex="1"
            SizeChanged="BottomPane_SizeChanged">
            <Grid
                x:Name="LeftGrid"
                Margin="0,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                ColumnSpacing="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0" Margin="20,-2,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <Image
                        Width="14"
                        Height="16"
                        HorizontalAlignment="Center"
                        Source="ms-appx:///Photos/Icons/Security.png"
                        Stretch="Fill" />
                    <TextBlock
                        Name="SecurityTextBlock"
                        Grid.Row="1"
                        Margin="0,-1,0,0"
                        HorizontalAlignment="Center"
                        Text="Security"
                        TextTrimming="CharacterEllipsis" />
                </Grid>
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <Image
                        Width="14"
                        Height="14"
                        HorizontalAlignment="Center"
                        Source="ms-appx:///Photos/Icons/Record.png"
                        Stretch="Fill" />
                    <TextBlock
                        Name="RecordTextBlock"
                        Grid.Row="1"
                        HorizontalAlignment="Center"
                        Text="Record"
                        TextTrimming="CharacterEllipsis" />
                </Grid>
                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <Image
                        Width="14"
                        Height="14"
                        HorizontalAlignment="Center"
                        Source="ms-appx:///Photos/Icons/Invite.png"
                        Stretch="Fill" />
                    <TextBlock
                        Name="InviteTextBlock"
                        Grid.Row="1"
                        HorizontalAlignment="Center"
                        Text="Invite"
                        TextTrimming="CharacterEllipsis" />
                </Grid>
            </Grid>
            <Grid
                x:Name="CenterGrid"
