                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <Image
                        Width="24"
                        Height="24"
                        HorizontalAlignment="Center"
                        Source="ms-appx:///Photos/Icons/White Circle.png"
                        Stretch="Fill" />
                    <Image
                        Width="14"
