                </Grid>
                <Grid
                    x:Name="OptionsGrid"
                    Grid.Column="2"
                    Margin="40,0,0,0"
                    HorizontalAlignment="Right"
                    Tapped="Grid_Tapped">
                    <FlyoutBase.AttachedFlyout>
                        <MenuFlyout>
                            <MenuFlyoutItem x:Name="Chat" Text="Chat" />
                            <MenuFlyoutItem x:Name="Participants" Text="Participants" />
                        </MenuFlyout>
                    </FlyoutBase.AttachedFlyout>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
