                        Width="45"
                        Height="45"
                        Margin="0,0,0,0"
                        Background="#F4F4F4"
                        BorderThickness="0"
                        Click="ClearParticipants_Click"
                        Content="&#xE149;"
                        FontFamily="Segoe MDL2 Assets"
                        FontSize="12"
                        FontWeight="ExtraBold">
                        <Button.Resources>
                            <!--<SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="White" />-->
                        </Button.Resources>
                    </Button>
                </Grid>
                <Grid
                    x:Name="UnlockedButton"
                    Grid.Column="1"
                    Margin="70,-2,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Background="#F4F4F4"
                    BorderThickness="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Image
                        Width="14"
                        Height="14"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Source="ms-appx:///Photos/Icons/unlocked.png"
                        Stretch="Fill" />
                    <TextBlock
                        Name="TitleTextBlock"
                        Grid.Column="1"
                        Margin="10,1,0,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="12"
                        Text="Test Meeting (00:02:29)"
                        TextTrimming="CharacterEllipsis" />
                </Grid>
                <Grid Grid.Column="2" HorizontalAlignment="Right">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>
                    <Button
                        x:Name="Settings"
                        Width="45"
                        Height="45"
                        Margin="0,0,200,0"
                        Background="#F4F4F4"
                        BorderThickness="0"
                        Click="Settings_Click"
                        Content="&#xE115;"
                        FontFamily="Segoe MDL2 Assets"
                        FontSize="13"
                        FontWeight="ExtraBold"
                        Tapped="Grid_Tapped">
                        <FlyoutBase.AttachedFlyout>
                            <MenuFlyout>
                                <MenuFlyoutSubItem Name="ModeItem" Text="Mode">
                                    <MenuFlyoutItem
                                        x:Name="AspectFit"
                                        Click="AspectFit_Click"
                                        Text="Aspect Fit" />
                                    <MenuFlyoutItem
                                        x:Name="Fill"
                                        Click="Fill_Click"
                                        Text="Fill" />
                                </MenuFlyoutSubItem>
                                <MenuFlyoutSeparator />
                                <MenuFlyoutSubItem Name="MinWidthItem" Text="Size">
                                    <MenuFlyoutItem
                                        x:Name="Small"
                                        Click="Small_Click"
                                        Text="Small" />
                                    <MenuFlyoutItem
                                        x:Name="Medium"
                                        Click="Medium_Click"
                                        Text="Medium" />
                                    <MenuFlyoutItem
                                        x:Name="Large"
                                        Click="Large_Click"
                                        Text="Large" />
                                </MenuFlyoutSubItem>
                                <MenuFlyoutSeparator />
                                <MenuFlyoutSubItem Name="ScrollModeItem" Text="Scroll Mode">
                                    <MenuFlyoutItem
                                        x:Name="VerticalScrollMode"
                                        Click="VerticalScrollMode_Click"
                                        Text="Vertical" />
                                    <MenuFlyoutItem
                                        x:Name="HorizontalScrollMode"
                                        Click="HorizontalScrollMode_Click"
                                        Text="Horizontal" />
                                </MenuFlyoutSubItem>
                                <MenuFlyoutSeparator x:Name="AspectRatioItemSeperator" Visibility="Collapsed" />
                                <MenuFlyoutSubItem Name="AspectRatioItem" Text="Aspect Ratio">
                                    <MenuFlyoutItem
                                        x:Name="Ratio16W9H"
                                        Click="Ratio16W9H_Click"
                                        Text="16:9" />
                                    <MenuFlyoutItem
                                        x:Name="Ratio4W3H"
                                        Click="Ratio4W3H_Click"
                                        Text="4:3" />
                                </MenuFlyoutSubItem>
                                <MenuFlyoutSeparator x:Name="VideoPositionItemSeperator" Visibility="Collapsed" />
                                <MenuFlyoutSubItem
                                    Name="VideoPositionItem"
                                    Text="Video Position"
                                    Visibility="Collapsed">
                                    <MenuFlyoutItem
                                        x:Name="Top"
                                        Click="Top_Click"
                                        Text="Top" />
                                    <MenuFlyoutItem
                                        x:Name="Bottom"
                                        Click="Bottom_Click"
                                        Text="Bottom" />
                                    <MenuFlyoutItem
                                        x:Name="Left"
                                        Click="Left_Click"
                                        Text="Left" />
                                    <MenuFlyoutItem
                                        x:Name="Right"
                                        Click="Right_Click"
                                        Text="Right" />
                                </MenuFlyoutSubItem>
                            </MenuFlyout>
                        </FlyoutBase.AttachedFlyout>

                        <Button.Resources>
                            <!--<SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="White" />-->
                        </Button.Resources>
                    </Button>
                    <Image
                        Width="14"
                        Height="12"
                        Margin="0,-1,110,0"
                        VerticalAlignment="Center"
                        Source="ms-appx:///Photos/Icons/Wifi.png"
                        Stretch="Fill" />
                </Grid>
            </Grid>
        </Grid>

